<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :week_id %><br />
    <%= f.text_field :week_id %>
  </p>

  <p>
    <%= f.label :date %>
    (add 8 hours to MST game time)<br />
    <%= f.datetime_select :date %>
  </p>

  <p>
    <%= f.label :home %><br />
    <%= f.text_field :home %>
  </p>

  <p>
    <%= f.label :home_score %><br />
    <%= f.text_field :home_score %>
  </p>

  <p>
    <%= f.label :away %><br />
    <%= f.text_field :away %>
  </p>

  <p>
    <%= f.label :away_score %><br />
    <%= f.text_field :away_score %>
  </p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
